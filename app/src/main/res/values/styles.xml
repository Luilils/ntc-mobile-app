<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.App.BottomCurved" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">64dp</item>
        <item name="cornerSizeBottomRight">64dp</item>
    </style>

    <style name="LoginInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxBackgroundColor">@color/input_background</item>
    </style>

    <style name="LoginButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:height">48dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_purple</item>
    </style>
</resources> 