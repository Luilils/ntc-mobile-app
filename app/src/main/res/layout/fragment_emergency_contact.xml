<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_container_background"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- Contact Person -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Person:"
            android:textColor="#666666"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/contactPersonInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:background="@android:color/transparent"/>

        <!-- Relationship -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relationship:"
            android:textColor="#666666"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/relationshipInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:background="@android:color/transparent"/>

        <!-- Home Phone No. -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Phone No.:"
            android:textColor="#666666"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/homePhoneInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:background="@android:color/transparent"/>

        <!-- Mobile Phone No. -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Phone No.:"
            android:textColor="#666666"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/emergencyMobileInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:enabled="false"
            android:background="@android:color/transparent"/>

    </LinearLayout>
</ScrollView> 